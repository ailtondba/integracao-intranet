# Configurações do Paperless-NGX
# Copie este arquivo e ajuste as configurações conforme necessário

# === CONFIGURAÇÕES BÁSICAS ===
PAPERLESS_REDIS=redis://redis:6379
PAPERLESS_DBHOST=db
PAPERLESS_DBPORT=5432
PAPERLESS_DBNAME=paperless
PAPERLESS_DBUSER=paperless
PAPERLESS_DBPASS=paperless

# === CONFIGURAÇÕES DE SEGURANÇA ===
# IMPORTANTE: Altere esta chave secreta em produção!
PAPERLESS_SECRET_KEY=change-me-in-production-please-use-a-long-random-string

# URLs permitidas (adicione o domínio da sua intranet)
PAPERLESS_ALLOWED_HOSTS=localhost,127.0.0.1,paperless.empresa.local

# CORS - Permitir acesso da intranet
PAPERLESS_CORS_ALLOWED_HOSTS=http://localhost:3000,http://intranet.empresa.local,https://intranet.empresa.local

# === CONFIGURAÇÕES DE USUÁRIO ADMIN ===
# Usuário administrador inicial
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=admin123
PAPERLESS_ADMIN_MAIL=admin@empresa.local

# === CONFIGURAÇÕES DE OCR ===
# Idiomas para OCR (português e inglês)
PAPERLESS_OCR_LANGUAGE=por+eng
PAPERLESS_OCR_MODE=skip

# === CONFIGURAÇÕES DE CONSUMO ===
# Diretório para novos documentos
PAPERLESS_CONSUMPTION_DIR=/usr/src/paperless/consume

# Deletar documentos originais após processamento
PAPERLESS_CONSUMER_DELETE_DUPLICATES=true
PAPERLESS_CONSUMER_RECURSIVE=true
PAPERLESS_CONSUMER_SUBDIRS_AS_TAGS=true

# === CONFIGURAÇÕES DE TIKA ===
# Habilitar Apache Tika para extração de texto
PAPERLESS_TIKA_ENABLED=1
PAPERLESS_TIKA_ENDPOINT=http://tika:9998
PAPERLESS_TIKA_GOTENBERG_ENDPOINT=http://gotenberg:3000

# === CONFIGURAÇÕES DE TIMEZONE ===
PAPERLESS_TIME_ZONE=America/Sao_Paulo

# === CONFIGURAÇÕES DE URL ===
# URL base para links externos
PAPERLESS_URL=http://localhost:8000

# === CONFIGURAÇÕES DE EMAIL (OPCIONAL) ===
# Configurar apenas se necessário para notificações
# PAPERLESS_EMAIL_HOST=smtp.empresa.local
# PAPERLESS_EMAIL_PORT=587
# PAPERLESS_EMAIL_HOST_USER=paperless@empresa.local
# PAPERLESS_EMAIL_HOST_PASSWORD=senha_email
# PAPERLESS_EMAIL_USE_TLS=true

# === CONFIGURAÇÕES DE LOGGING ===
PAPERLESS_LOGROTATE_MAX_SIZE=1048576
PAPERLESS_LOGROTATE_MAX_BACKUPS=20

# === CONFIGURAÇÕES DE PERFORMANCE ===
# Número de workers para processamento
PAPERLESS_TASK_WORKERS=1
PAPERLESS_THREADS_PER_WORKER=1

# === CONFIGURAÇÕES DE BACKUP ===
# Habilitar backup automático
PAPERLESS_ENABLE_HTTP_REMOTE_USER=false

# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
# Apenas para desenvolvimento - remover em produção
PAPERLESS_DEBUG=false

# === CONFIGURAÇÕES DE INTEGRAÇÃO ===
# Token de API para integração com intranet
# Será gerado automaticamente após primeiro login
# PAPERLESS_API_TOKEN=seu_token_aqui_após_configuração
